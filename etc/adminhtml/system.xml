<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magesuite" translate="label" sortOrder="300">
            <label>MageSuite</label>
        </tab>
        <section id="images" translate="label" type="text" sortOrder="920" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Images</label>
            <tab>magesuite</tab>
            <resource>MageSuite_LazyResize::config_imagesoptimization</resource>
            <group id="images_optimization" translate="label" type="text" sortOrder="250" showInDefault="1">
                <label>Images Optimization</label>
                <field id="enable_optimization" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Enable Images Optimization</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="url_generation" translate="label" type="text" sortOrder="250" showInDefault="1">
                <label>URL generation</label>
                <field id="include_image_file_size_in_url" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Include image file size in URL</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>When enabled file size of original image will be included in thumbnail URL. Enable this for environments where product images are uploaded without changing file names (e.g. trough importer).</comment>
                </field>
            </group>
        </section>
    </system>
</config>
